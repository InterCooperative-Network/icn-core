{
  "name": "@icn/ui-kit",
  "version": "0.1.0",
  "description": "Shared UI components for ICN cross-platform applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "clean": "rm -rf dist .turbo"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-native": ">=0.70.0",
    "@tamagui/core": "^1.70.0",
    "@tamagui/config": "^1.70.0"
  },
  "dependencies": {
    "@tamagui/animations-react-native": "^1.70.0",
    "@tamagui/button": "^1.70.0",
    "@tamagui/card": "^1.70.0",
    "@tamagui/form": "^1.70.0",
    "@tamagui/input": "^1.70.0",
    "@tamagui/text": "^1.70.0",
    "@tamagui/theme": "^1.70.0",
    "@tamagui/tokens": "^1.70.0",
    "@tamagui/stacks": "^1.70.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "icn",
    "ui",
    "components",
    "tamagui",
    "react-native",
    "cross-platform"
  ],
  "author": "ICN Core Contributors",
  "license": "Apache-2.0"
} 