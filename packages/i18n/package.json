{
  "name": "@icn/i18n",
  "version": "0.1.0",
  "description": "Internationalization support for ICN applications",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "locales/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.{ts,tsx}",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "clean": "rm -rf dist .turbo"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "i18next": ">=23.0.0",
    "react-i18next": ">=13.0.0"
  },
  "dependencies": {
    "i18next-browser-languagedetector": "^7.2.0",
    "i18next-http-backend": "^2.4.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "icn",
    "i18n",
    "internationalization",
    "localization",
    "translation",
    "react"
  ],
  "author": "ICN Core Contributors",
  "license": "Apache-2.0"
}