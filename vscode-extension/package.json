{
  "name": "icn-ccl-tools",
  "displayName": "ICN CCL Tools",
  "description": "Syntax highlighting and build tasks for Cooperative Contract Language (CCL)",
  "version": "0.1.0",
  "publisher": "icn",
  "engines": { "vscode": "^1.80.0" },
  "categories": ["Programming Languages"],
  "activationEvents": [
    "onLanguage:ccl"
  ],
  "main": "extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ccl",
        "aliases": ["CCL", "ccl"],
        "extensions": [".ccl"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ccl",
        "scopeName": "source.ccl",
        "path": "./syntaxes/ccl.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "icn-ccl.compile",
        "title": "Compile CCL File"
      },
      {
        "command": "icn-ccl.debug",
        "title": "Debug CCL Contract"
      },
      {
        "command": "icn-ccl.package.init",
        "title": "Initialize CCL Package"
      },
      {
        "command": "icn-ccl.package.install",
        "title": "Install CCL Package"
      }
    ],
    "taskDefinitions": [
      {
        "type": "ccl",
        "required": [],
        "properties": {
          "file": {
            "type": "string",
            "description": "CCL file to compile"
          }
        }
      }
    ],
    "configuration": {
      "title": "ICN CCL Tools",
      "properties": {
        "icn-ccl.lsp.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable CCL Language Server Protocol support"
        },
        "icn-ccl.debugger.enabled": {
          "type": "boolean", 
          "default": true,
          "description": "Enable CCL contract debugging"
        },
        "icn-ccl.packages.registry": {
          "type": "string",
          "default": "https://registry.icn.coop/packages",
          "description": "CCL package registry URL"
        }
      }
    }
  }
}
